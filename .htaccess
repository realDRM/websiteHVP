Options +FollowSymlinks
RewriteEngine On
RewriteBase /

# Autoredirect naar de niet-www versie
RewriteCond %{HTTP_HOST}  !^hetvrijepodium\.be$  [NC]
RewriteRule ^(.*)$  http://hetvrijepodium.be/$1 [R=301,L]

# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteRule ^(.*)$ ..%{REQUEST_URI} [NC]

# temporary redirect for theater.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^theater\.html$ theater/theater [R=301,NC,L]

# URL simplification
# RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^theater/([\w-]+)/?$ $1.html [NC,L]
#ErrorDocument 404 /index.html
